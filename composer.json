{
	"name": "extrachill/extrachill-users",
	"description": "Cross-site user management for the ExtraChill Platform multisite network",
	"version": "0.5.7",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpunit/phpunit": "^9.0"
	},
	"scripts": {
		"lint:php": "vendor/bin/phpcs --standard=WordPress --extensions=php .",
		"lint:fix": "vendor/bin/phpcbf --standard=WordPress --extensions=php .",
		"test": "vendor/bin/phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
